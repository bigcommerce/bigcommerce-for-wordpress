.bc-btn,
button.bc-btn,
a.bc-btn,
.entry-content .bc-btn,
.entry-content button.bc-btn,
.entry-content a.bc-btn,
.bc-account-login__form input[type="submit"] {
	display: inline-block;
	font-family: sans-serif;
	width: 100%;
	padding: 15px 20px;
	border-radius: 0;
	font-weight: var(--font-weight-semibold);
	line-height: var(--line-height-l);
	font-size: var(--font-size-content-s);
	text-transform: uppercase;
	text-align: center;
	text-decoration: none;
	box-shadow: none;
	opacity: 1;
	transition: var(--transition);

	@media (--viewport-full) {
		max-width: 270px;
	}

	&:hover,
	&:focus {
		opacity: 0.9;
		text-decoration: none;
		box-shadow: none;
	}

	&[disabled] {
		background-color: var(--color-bc-grey-medium);
		color: var(--color-white);
		padding: 15px 20px;
		line-height: var(--line-height-l);
		font-family: sans-serif;
		opacity: 0.6;
		cursor: not-allowed;

		&:hover,
		&:focus {
			background-color: var(--color-bc-grey-medium);
			color: var(--color-white);
			padding: 15px 20px;
			line-height: var(--line-height-l);
			font-family: sans-serif;
			opacity: 0.6;
		}
	}

	&.bc-ajax-cart-processing {
		animation: ajax-add-to-cart 1s infinite;
	}

	&--small {
		padding: 8px 16px;
	}

	&--inverse {
		padding: 11px 20px;
		box-sizing: border-box;
		background-color: transparent;
		border: 4px solid;
	}

	.bc-product-form & {
		@media (--viewport-full) {
			max-width: none;
		}
	}
}

@keyframes ajax-add-to-cart {

	0% {
		opacity: 0.3;
	}

	50% {
		opacity: 0.6;
	}

	100% {
		opacity: 0.3;
	}
}
